{
    "manifest_version": 2,

    "name": "Vigil",
    "description": "Count of visited sites.",
    "version": "1.0",

    "icons": {
        "16": "icon.png",
        "128": "bigicon.png"
    },
    
    "permissions": [
        "tabs"
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "main.html"
    },

    "chrome_url_overrides" : {
        "newtab": "main.html"
    },

    "background": {
        "scripts": ["script/background.js"]
    }
}